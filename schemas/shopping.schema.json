{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "shopping.schema.json",
  "title": "Shopping Agent Output",
  "description": "Schema for the shopping agent output. Each day contains an array of shopping destinations with bilingual names, locations, costs, types, and optional search results.",
  "type": "object",
  "properties": {
    "agent": {
      "type": "string",
      "const": "shopping"
    },
    "status": {
      "type": "string",
      "enum": ["complete"]
    },
    "data": {
      "type": "object",
      "properties": {
        "days": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/day_entry"
          }
        }
      },
      "required": ["days"],
      "additionalProperties": true
    },
    "notes": {
      "type": "string"
    }
  },
  "required": ["agent", "status", "data"],
  "additionalProperties": true,

  "$defs": {
    "shopping_item": {
      "type": "object",
      "properties": {
        "name_base": {
          "type": "string",
          "description": "Shopping venue name in English/romanized form."
        },
        "name_local": {
          "type": ["string", "null"],
          "description": "Shopping venue name in local script, or null."
        },
        "location_base": {
          "type": "string",
          "description": "Venue address in English/romanized form."
        },
        "location_local": {
          "type": "string",
          "description": "Venue address in local script."
        },
        "coordinates": {
          "$ref": "poi-common.schema.json#/$defs/coordinates"
        },
        "cost": {
          "$ref": "poi-common.schema.json#/$defs/cost_field"
        },
        "type": {
          "type": "string",
          "description": "Category of shopping venue (e.g., 'Local Market', 'Shopping Mall', 'Boutique')."
        },
        "notes": {
          "type": "string",
          "description": "Free-form notes about the shopping venue."
        },
        "time": {
          "$ref": "poi-common.schema.json#/$defs/time_flexible"
        },
        "search_results": {
          "type": "array",
          "items": {
            "$ref": "poi-common.schema.json#/$defs/search_result"
          }
        },
        "currency": {
          "$ref": "poi-common.schema.json#/$defs/currency_code"
        }
      },
      "required": ["name_base", "name_local", "location_base", "location_local", "cost", "type"],
      "additionalProperties": true
    },

    "day_entry": {
      "type": "object",
      "properties": {
        "day": {
          "type": "integer",
          "minimum": 1,
          "description": "Day number in the trip (1-indexed)."
        },
        "date": {
          "type": "string",
          "description": "Date in YYYY-MM-DD format."
        },
        "location": {
          "type": "string",
          "description": "City or location for this day."
        },
        "shopping": {
          "type": "array",
          "minItems": 0,
          "items": {
            "$ref": "#/$defs/shopping_item"
          },
          "description": "List of shopping destinations for this day. Can be empty."
        }
      },
      "required": ["day", "shopping"],
      "additionalProperties": true
    }
  }
}
