{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "shopping.schema.json",
  "title": "Shopping Agent Output",
  "description": "Schema for the shopping agent output. STRICT: no legacy fields, all items require currency, time, search_results.",
  "type": "object",
  "properties": {
    "agent": { "type": "string", "const": "shopping" },
    "status": { "type": "string", "enum": ["complete"] },
    "data": {
      "type": "object",
      "properties": {
        "days": { "type": "array", "items": { "$ref": "#/$defs/day_entry" } }
      },
      "required": ["days"],
      "additionalProperties": true
    },
    "notes": { "type": "string" }
  },
  "required": ["agent", "status", "data"],
  "additionalProperties": true,

  "$defs": {
    "shopping_item": {
      "type": "object",
      "properties": {
        "name_base": { "type": "string", "minLength": 1 },
        "name_local": { "type": "string", "description": "Chinese name. Empty string '' if unknown." },
        "location_base": { "type": "string" },
        "location_local": { "type": "string", "description": "Chinese address. Empty string '' if unknown." },
        "coordinates": { "$ref": "poi-common.schema.json#/$defs/coordinates" },
        "cost": { "$ref": "poi-common.schema.json#/$defs/cost_field" },
        "currency": { "$ref": "poi-common.schema.json#/$defs/currency_code" },
        "type": { "type": "string" },
        "notes": { "type": "string" },
        "time": { "$ref": "poi-common.schema.json#/$defs/time_range" },
        "search_results": {
          "type": "array",
          "items": { "$ref": "poi-common.schema.json#/$defs/search_result" }
        }
      },
      "required": ["name_base", "name_local", "location_base", "location_local", "cost", "currency", "type", "time", "search_results"],
      "additionalProperties": false
    },

    "day_entry": {
      "type": "object",
      "properties": {
        "day": { "type": "integer", "minimum": 1 },
        "date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
        "location": { "type": "string" },
        "shopping": { "type": "array", "items": { "$ref": "#/$defs/shopping_item" } }
      },
      "required": ["day", "date", "shopping"],
      "additionalProperties": true
    }
  }
}
