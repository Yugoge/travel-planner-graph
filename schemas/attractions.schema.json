{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "attractions.schema.json",
  "title": "Attractions Agent Output",
  "description": "Schema for the attractions agent output. Each day contains an array of attractions with bilingual names, locations, costs, durations, types, and optional search results.",
  "type": "object",
  "properties": {
    "agent": {
      "type": "string",
      "const": "attractions"
    },
    "status": {
      "type": "string",
      "enum": ["complete"]
    },
    "data": {
      "type": "object",
      "properties": {
        "days": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/day_entry"
          }
        }
      },
      "required": ["days"],
      "additionalProperties": true
    },
    "notes": {
      "type": "string"
    }
  },
  "required": ["agent", "status", "data"],
  "additionalProperties": true,

  "$defs": {
    "attraction_item": {
      "type": "object",
      "properties": {
        "name_base": {
          "type": "string",
          "description": "Attraction name in English/romanized form."
        },
        "name_local": {
          "type": ["string", "null"],
          "description": "Attraction name in local script, or null."
        },
        "location_base": {
          "type": "string",
          "description": "Attraction address in English/romanized form."
        },
        "location_local": {
          "type": "string",
          "description": "Attraction address in local script."
        },
        "coordinates": {
          "$ref": "poi-common.schema.json#/$defs/coordinates"
        },
        "cost": {
          "$ref": "poi-common.schema.json#/$defs/cost_field"
        },
        "duration_minutes": {
          "type": "number",
          "minimum": 1,
          "description": "Recommended visit duration in minutes."
        },
        "type": {
          "type": "string",
          "description": "Category of attraction (e.g., 'Historical Site', 'Theme Park', 'Art Museum')."
        },
        "notes": {
          "type": "string",
          "description": "Free-form notes about the attraction."
        },
        "opening_hours": {
          "type": "string",
          "description": "Opening hours information."
        },
        "recommended_duration": {
          "type": "string",
          "description": "Human-readable recommended duration (e.g., '1h', '2-3 hours')."
        },
        "highlights": {
          "oneOf": [
            {
              "type": "array",
              "items": { "type": "string" }
            },
            {
              "type": "string"
            }
          ],
          "description": "Key highlights of the attraction. Can be an array of strings or a single string."
        },
        "time": {
          "$ref": "poi-common.schema.json#/$defs/time_range"
        },
        "search_results": {
          "type": "array",
          "items": {
            "$ref": "poi-common.schema.json#/$defs/search_result"
          }
        },
        "currency": {
          "$ref": "poi-common.schema.json#/$defs/currency_code"
        }
      },
      "required": ["name_base", "name_local", "location_base", "location_local", "cost", "duration_minutes", "type"],
      "additionalProperties": true
    },

    "day_entry": {
      "type": "object",
      "properties": {
        "day": {
          "type": "integer",
          "minimum": 1,
          "description": "Day number in the trip (1-indexed)."
        },
        "date": {
          "type": "string",
          "description": "Date in YYYY-MM-DD format."
        },
        "location": {
          "type": "string",
          "description": "City or location for this day."
        },
        "attractions": {
          "type": "array",
          "minItems": 0,
          "items": {
            "$ref": "#/$defs/attraction_item"
          },
          "description": "List of attractions for this day. Can be empty."
        }
      },
      "required": ["day", "attractions"],
      "additionalProperties": true
    }
  }
}
