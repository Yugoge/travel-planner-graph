{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "entertainment.schema.json",
  "title": "Entertainment Agent Output",
  "description": "Schema for the entertainment agent output. Each day contains an array of entertainment activities with bilingual names, locations, costs, times, types, and optional search results.",
  "type": "object",
  "properties": {
    "agent": {
      "type": "string",
      "const": "entertainment"
    },
    "status": {
      "type": "string",
      "enum": ["complete"]
    },
    "data": {
      "type": "object",
      "properties": {
        "days": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/day_entry"
          }
        }
      },
      "required": ["days"],
      "additionalProperties": true
    },
    "notes": {
      "type": "string"
    }
  },
  "required": ["agent", "status", "data"],
  "additionalProperties": true,

  "$defs": {
    "entertainment_item": {
      "type": "object",
      "properties": {
        "name_base": {
          "type": "string",
          "description": "Entertainment venue/activity name in English/romanized form."
        },
        "name_local": {
          "type": ["string", "null"],
          "description": "Entertainment venue/activity name in local script, or null."
        },
        "location_base": {
          "type": "string",
          "description": "Venue address in English/romanized form."
        },
        "location_local": {
          "type": "string",
          "description": "Venue address in local script."
        },
        "coordinates": {
          "$ref": "poi-common.schema.json#/$defs/coordinates"
        },
        "cost": {
          "$ref": "poi-common.schema.json#/$defs/cost_field"
        },
        "time": {
          "$ref": "poi-common.schema.json#/$defs/time_flexible",
          "description": "Time for the activity. Can be a time_range object or a plain HH:MM string."
        },
        "type": {
          "type": "string",
          "description": "Category of entertainment (e.g., 'Theater/Performance', 'Coffee Shop', 'Toy Store', 'Photography')."
        },
        "notes": {
          "type": "string",
          "description": "Free-form notes about the entertainment activity."
        },
        "search_results": {
          "type": "array",
          "items": {
            "$ref": "poi-common.schema.json#/$defs/search_result"
          }
        },
        "currency": {
          "$ref": "poi-common.schema.json#/$defs/currency_code"
        }
      },
      "required": ["name_base", "name_local", "location_base", "location_local", "cost", "type"],
      "additionalProperties": true
    },

    "day_entry": {
      "type": "object",
      "properties": {
        "day": {
          "type": "integer",
          "minimum": 1,
          "description": "Day number in the trip (1-indexed)."
        },
        "date": {
          "type": "string",
          "description": "Date in YYYY-MM-DD format."
        },
        "location": {
          "type": "string",
          "description": "City or location for this day."
        },
        "entertainment": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/entertainment_item"
          },
          "description": "List of entertainment activities for this day. Can be empty."
        }
      },
      "required": ["day", "entertainment"],
      "additionalProperties": true
    }
  }
}
