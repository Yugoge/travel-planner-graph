{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "entertainment.schema.json",
  "title": "Entertainment Agent Output",
  "description": "Schema for the entertainment agent output. STRICT: coordinates {lat,lng} only, currency required, type_base required.",
  "type": "object",
  "properties": {
    "agent": { "type": "string", "const": "entertainment" },
    "status": { "type": "string", "enum": ["complete"] },
    "data": {
      "type": "object",
      "properties": {
        "days": { "type": "array", "items": { "$ref": "#/$defs/day_entry" } }
      },
      "required": ["days"],
      "additionalProperties": true
    },
    "notes": { "type": "string" }
  },
  "required": ["agent", "status", "data"],
  "additionalProperties": true,

  "$defs": {
    "entertainment_item": {
      "type": "object",
      "properties": {
        "name_base": { "type": "string", "minLength": 1 },
        "name_local": { "type": "string" },
        "location_base": { "type": "string" },
        "location_local": { "type": "string" },
        "coordinates": { "$ref": "poi-common.schema.json#/$defs/coordinates" },
        "cost": { "$ref": "poi-common.schema.json#/$defs/cost_field" },
        "currency_local": { "$ref": "poi-common.schema.json#/$defs/currency_code" },
        "time": { "$ref": "poi-common.schema.json#/$defs/time_range" },
        "type_base": { "type": "string", "description": "Entertainment type in base language" },
        "type_local": { "type": "string", "description": "Entertainment type in local language" },
        "note_base": { "type": "string", "description": "Short tip/note in base language" },
        "note_local": { "type": "string", "description": "Short tip/note in local language" },
        "notes_base": { "type": "string", "description": "Detailed notes in base language" },
        "notes_local": { "type": "string", "description": "Detailed notes in local language" },
        "search_results": {
          "type": "array",
          "items": { "$ref": "poi-common.schema.json#/$defs/search_result" }
        }
      },
      "required": ["name_base", "name_local", "location_base", "location_local", "cost", "currency_local", "type_base"],
      "additionalProperties": false
    },

    "day_entry": {
      "type": "object",
      "properties": {
        "day": { "type": "integer", "minimum": 1 },
        "date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
        "location": { "type": "string" },
        "entertainment": { "type": "array", "items": { "$ref": "#/$defs/entertainment_item" } }
      },
      "required": ["day", "date", "entertainment"],
      "additionalProperties": true
    }
  }
}
