{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "accommodation.schema.json",
  "title": "Accommodation Agent Output",
  "description": "Schema for the accommodation agent output. STRICT: rating always present (null for unrated), no total_for_stay/total_cost (use notes), coordinates {lat,lng} only.",
  "type": "object",
  "properties": {
    "agent": { "type": "string", "const": "accommodation" },
    "status": { "type": "string", "enum": ["complete"] },
    "data": {
      "type": "object",
      "properties": {
        "days": { "type": "array", "items": { "$ref": "#/$defs/day_entry" } }
      },
      "required": ["days"],
      "additionalProperties": true
    },
    "notes": { "type": "string" }
  },
  "required": ["agent", "status", "data"],
  "additionalProperties": true,

  "$defs": {
    "accommodation_item": {
      "type": "object",
      "properties": {
        "name_base": { "type": "string", "minLength": 1 },
        "name_local": { "type": "string" },
        "location_base": { "type": "string" },
        "location_local": { "type": "string" },
        "coordinates": { "$ref": "poi-common.schema.json#/$defs/coordinates" },
        "cost": { "$ref": "poi-common.schema.json#/$defs/cost_field", "description": "Cost per night." },
        "currency": { "$ref": "poi-common.schema.json#/$defs/currency_code" },
        "type": { "type": "string" },
        "amenities": { "type": "array", "items": { "type": "string" } },
        "notes": { "type": "string" },
        "rating": { "type": ["number", "null"], "minimum": 0, "maximum": 5, "description": "Rating 0-5, or null for unrated." },
        "check_in": { "type": "string", "description": "Check-in time in HH:MM format." },
        "check_out": { "type": "string", "description": "Check-out time or description." },
        "search_results": {
          "type": "array",
          "items": { "$ref": "poi-common.schema.json#/$defs/search_result" }
        }
      },
      "required": ["name_base", "name_local", "location_base", "location_local", "cost", "currency", "type", "amenities", "rating"],
      "additionalProperties": false
    },

    "day_entry": {
      "type": "object",
      "properties": {
        "day": { "type": "integer", "minimum": 1 },
        "date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
        "location": { "type": "string" },
        "accommodation": { "$ref": "#/$defs/accommodation_item" }
      },
      "required": ["day", "date", "accommodation"],
      "additionalProperties": true
    }
  }
}
