{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "meals.schema.json",
  "title": "Meals Agent Output",
  "description": "Schema for the meals agent output. STRICT: currency required, coordinates use {lat, lng} only.",
  "type": "object",
  "properties": {
    "agent": { "type": "string", "const": "meals" },
    "status": { "type": "string", "enum": ["complete"] },
    "data": {
      "type": "object",
      "properties": {
        "days": { "type": "array", "items": { "$ref": "#/$defs/day_entry" } }
      },
      "required": ["days"],
      "additionalProperties": true
    },
    "notes": { "type": "string" }
  },
  "required": ["agent", "status", "data"],
  "additionalProperties": true,

  "$defs": {
    "meal_item": {
      "type": "object",
      "properties": {
        "name_base": { "type": "string", "minLength": 1 },
        "name_local": { "type": "string" },
        "location_base": { "type": "string" },
        "location_local": { "type": "string" },
        "coordinates": { "$ref": "poi-common.schema.json#/$defs/coordinates" },
        "cost": { "$ref": "poi-common.schema.json#/$defs/cost_field" },
        "currency_local": { "$ref": "poi-common.schema.json#/$defs/currency_code" },
        "cuisine_base": { "type": "string", "description": "Cuisine type in base language" },
        "cuisine_local": { "type": "string", "description": "Cuisine type in local language" },
        "signature_dishes_base": { "type": "string", "description": "Signature dishes in base language" },
        "signature_dishes_local": { "type": "string", "description": "Signature dishes in local language" },
        "notes_base": { "type": "string", "description": "Notes in base language" },
        "notes_local": { "type": "string", "description": "Notes in local language" },
        "time": { "$ref": "poi-common.schema.json#/$defs/time_range" },
        "search_results": {
          "type": "array",
          "items": { "$ref": "poi-common.schema.json#/$defs/search_result" }
        },
        "optional": {
          "type": "boolean",
          "description": "Whether this meal is optional (flexible/skippable). Default: false. Most meals should be false.",
          "default": false
        },
        "image_url": { "$ref": "poi-common.schema.json#/$defs/image_url" }
      },
      "required": ["name_base", "name_local", "location_base", "location_local", "cost", "currency_local", "cuisine_base", "time", "optional"],
      "additionalProperties": false
    },

    "day_entry": {
      "type": "object",
      "properties": {
        "day": { "type": "integer", "minimum": 1 },
        "date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
        "location": { "type": "string" },
        "breakfast": { "$ref": "#/$defs/meal_item" },
        "lunch": { "$ref": "#/$defs/meal_item" },
        "dinner": { "$ref": "#/$defs/meal_item" }
      },
      "required": ["day", "date", "breakfast", "lunch", "dinner"],
      "additionalProperties": true
    }
  }
}
