{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "meals.schema.json",
  "title": "Meals Agent Output",
  "description": "Schema for the meals agent output. Each day contains breakfast, lunch, and dinner with bilingual names, locations, coordinates, costs, cuisine types, and optional search results.",
  "type": "object",
  "properties": {
    "agent": {
      "type": "string",
      "const": "meals"
    },
    "status": {
      "type": "string",
      "enum": ["complete"]
    },
    "data": {
      "type": "object",
      "properties": {
        "days": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/day_entry"
          }
        }
      },
      "required": ["days"],
      "additionalProperties": true
    },
    "notes": {
      "type": "string"
    }
  },
  "required": ["agent", "status", "data"],
  "additionalProperties": true,

  "$defs": {
    "meal_item": {
      "type": "object",
      "properties": {
        "name_base": {
          "type": "string",
          "description": "Meal venue name in English/romanized form."
        },
        "name_local": {
          "type": ["string", "null"],
          "description": "Meal venue name in local script, or null."
        },
        "location_base": {
          "type": "string",
          "description": "Venue address in English/romanized form."
        },
        "location_local": {
          "type": "string",
          "description": "Venue address in local script."
        },
        "coordinates": {
          "$ref": "poi-common.schema.json#/$defs/coordinates"
        },
        "cost": {
          "$ref": "poi-common.schema.json#/$defs/cost_field"
        },
        "cuisine": {
          "type": "string",
          "description": "Type of cuisine (e.g., 'Sichuan', 'Japanese Yakiniku')."
        },
        "notes": {
          "type": "string",
          "description": "Free-form notes about the meal venue."
        },
        "signature_dishes": {
          "type": "string",
          "description": "Notable dishes available at this venue."
        },
        "time": {
          "$ref": "poi-common.schema.json#/$defs/time_range"
        },
        "search_results": {
          "type": "array",
          "items": {
            "$ref": "poi-common.schema.json#/$defs/search_result"
          }
        },
        "currency": {
          "$ref": "poi-common.schema.json#/$defs/currency_code"
        }
      },
      "required": ["name_base", "name_local", "location_base", "location_local", "cost", "cuisine"],
      "additionalProperties": true
    },

    "day_entry": {
      "type": "object",
      "properties": {
        "day": {
          "type": "integer",
          "minimum": 1,
          "description": "Day number in the trip (1-indexed)."
        },
        "date": {
          "type": "string",
          "description": "Date in YYYY-MM-DD format."
        },
        "location": {
          "type": "string",
          "description": "City or location for this day."
        },
        "breakfast": {
          "$ref": "#/$defs/meal_item"
        },
        "lunch": {
          "$ref": "#/$defs/meal_item"
        },
        "dinner": {
          "$ref": "#/$defs/meal_item"
        }
      },
      "required": ["day", "breakfast", "lunch", "dinner"],
      "additionalProperties": true
    }
  }
}
